{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch with MSVC",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}/schnitzel.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "name": "Launch with GCC/MinGW",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/schnitzel.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
